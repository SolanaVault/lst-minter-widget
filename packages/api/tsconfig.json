{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "moduleResolution": "Node",
    "target": "es2022",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}
